[Unit]
Description=Maison Mirror Wake Word Listener (Porcupine)
After=network.target maison-backend.service sound.target
Requires=maison-backend.service

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/maison-mirror/mirror-server
Environment="PATH=/home/pi/maison-mirror/mirror-server/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/pi/maison-mirror/mirror-server/venv/bin/python3 wake_word_listener.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
