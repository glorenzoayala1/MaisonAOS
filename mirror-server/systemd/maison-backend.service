[Unit]
Description=Maison Mirror Backend (FastAPI)
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/maison-mirror/mirror-server
Environment="PATH=/home/pi/maison-mirror/mirror-server/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/pi/maison-mirror/mirror-server/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
